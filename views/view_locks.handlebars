<div class="row">
<div class="col-auto">
<h1>Hi, {{name}}!</h1>
<h2>Welcome to your Lockbox!</h2>

</div>
</div>

<div class="row mt-4">
<div class="col-md-6">
<h2>Lock List</h2>
<p></p>
{{#each locks as |lock|}}
<h3>{{lock.site}}</h3>
<ul>
<li style="list-style-type: none;"><strong>Username:</strong> {{lock.username}}</li>
<li style="list-style-type: none;"><strong>Password:</strong> {{lock.password}}</li>
</ul>
{{else}}
You have no locks!
{{/each}}

</div>

  <div class="row">
  <div class="col-auto">
    <h2>Hi, {{name}}!</h2>
    <h3>Welcome to your Lockbox!</h3>

  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>View locks</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="Choose from the list below"></label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

</div>

<script src="./js/viewLocks.js"></script>